<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostIncident">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
       <com.google.android.material.appbar.AppBarLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:theme="@style/Theme.LM.AppBarOverlay">

           <androidx.appcompat.widget.Toolbar
               android:id="@+id/toolbar"
               android:layout_width="match_parent"
               android:layout_height="?attr/actionBarSize"
               android:background="?attr/colorSecondaryVariant"
               app:popupTheme="@style/Theme.LM.PopupOverlay">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_baseline_close_24"
                   android:id="@+id/close_post_btn"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_baseline_close_24"
                   android:id="@+id/Upload_incident_btn"
                   android:text="UPLOAD"
                   android:layout_gravity="right"
                   android:padding="10dp"
                   android:textColor="@color/white"
                   />
           </androidx.appcompat.widget.Toolbar>

       </com.google.android.material.appbar.AppBarLayout>
           <ImageView
               android:layout_width="400dp"
               android:layout_height="400dp"
               android:id="@+id/selected_image"
               android:src="@color/black"
               android:layout_gravity="center"
               />

       <EditText
           android:id="@+id/Caption_Edit_text"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Caption.."
           android:minHeight="48dp" />
   </LinearLayout>
</ScrollView>